#include <Servo.h>
Servo myservo;
#define poten A1

void setup()
{
  Serial.begin(9600);
  Serial.println("Test Program begining");
  myservo.attach(9);
}
void loop()
{
  int potent = analogRead(poten);                      //reads potentiometer
  //Serial.println(potent);
  int scalepotent = map(potent, 0, 1023, 0, 180);      //scale servo to motor (-90 - +90)
  Serial.println(scalepotent);
  myservo.write(scalepotent);
  delay(10);                                         //Gives time for servo to get to position

}
